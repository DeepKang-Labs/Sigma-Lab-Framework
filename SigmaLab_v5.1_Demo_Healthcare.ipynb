# 1Ô∏è‚É£ Imports
import json, yaml, hashlib, datetime
from sigma_lab_v4_2 import SigmaLab, demo_context

# 2Ô∏è‚É£ Initialisation du moteur
cfg, ctx = demo_context("healthcare")
engine = SigmaLab(cfg)

print("üß† Sigma-Lab v5.1 ‚Äî Procedural Diagnostic Framework")
print("Case: Healthcare Prioritization\n")

# 3Ô∏è‚É£ Lancer un diagnostic complet
result = engine.diagnose(ctx)

# 4Ô∏è‚É£ Affichage des r√©sultats synth√©tiques
print("=== Diagnostic Summary ===")
for k, v in result["scores"].items():
    print(f"{k:<12} ‚Üí {v:.3f}")

print("\nVetoes:", result["vetoes"] or "None")
print("Verdict:", result.get("verdict", "Undecided"))

# 5Ô∏è‚É£ Export de l‚Äôaudit trail
audit = engine.export_audit_trail(result)

# Ajout d‚Äôun hash de tra√ßabilit√©
audit_hash = hashlib.sha256(json.dumps(audit, sort_keys=True).encode()).hexdigest()
audit["sha256"] = audit_hash

# Sauvegarde locale
with open("audit_report_healthcare.yaml", "w", encoding="utf-8") as f:
    yaml.dump(audit, f, allow_unicode=True)

print("\nüìÑ Audit trail exported: audit_report_healthcare.yaml")
print("üîê SHA256 fingerprint:", audit_hash[:24], "...")

# 6Ô∏è‚É£ Visualisation rapide (textuelle)
import matplotlib.pyplot as plt

labels = list(result["scores"].keys())
values = list(result["scores"].values())

plt.figure(figsize=(7,4))
bars = plt.bar(labels, values)
plt.title("Sigma-Lab v5.1 ‚Äî Diagnostic Scores (Healthcare)")
plt.ylim(0, 1)
for bar in bars:
    plt.text(bar.get_x() + bar.get_width()/2, bar.get_height()+0.02,
             f"{bar.get_height():.2f}", ha="center", fontsize=9)
plt.show()

# 7Ô∏è‚É£ Validation (sanity check)
assert all(0.0 <= v <= 1.0 for v in values), "Risk values out of range!"
print("\n‚úÖ Validation check passed ‚Äî all metrics normalized [0,1].")

# 8Ô∏è‚É£ R√©sum√© final
summary = {
    "timestamp": datetime.datetime.utcnow().isoformat(),
    "status": result["status"],
    "verdict": result["verdict"],
    "sha256": audit_hash,
}

print("\n=== Summary ===")
print(json.dumps(summary, indent=2))


